<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTestApp.Login"
             Title="Login">
    <VerticalStackLayout Padding="20" VerticalOptions="Center">

        <Label 
        Text="LOGIN"
        VerticalOptions="Center"
        FontSize="Large"
        Padding="30"
        HorizontalOptions="Center" />

        <StackLayout Padding="0">
            <Entry x:Name="Username"
            Placeholder="Enter Username"  Text="{Binding UserName}"/>

            <Entry x:Name="Password"
               Placeholder="Enter Password"
               VerticalOptions="CenterAndExpand"  Text="{Binding Password}"
               />
        </StackLayout>

        <StackLayout Orientation="Horizontal" >
            <CheckBox HorizontalOptions="Center" VerticalOptions="Center" x:Name="CheckBox"  IsEnabled="{Binding cb}"/>
            <Label Text="Always Remember" HorizontalOptions="Center" VerticalOptions="Center"></Label>
        </StackLayout>

        <Button 
        Text="LOGIN"
        FontSize="Large"
        HorizontalOptions="Fill"  Command="{Binding LoginCommand}"/>

        <Button 
        Text="Forget Password"
        FontSize="Large"
        HorizontalOptions="Fill"
        TextColor="Blue"
        BackgroundColor="Transparent"/>



    </VerticalStackLayout>
</ContentPage>